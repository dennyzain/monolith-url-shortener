<table class="table table-bordered mt-5">
  <thead>
    <tr>
      <th scope="col">No</th>
      <th scope="col">Full URL</th>
      <th scope="col">Short URL</th>
      <th scope="col">viewed</th>
      <th scope="col">Handle</th>
    </tr>
  </thead>
  <tbody>
    <% data.forEach((item,index )=> { %>
    <tr>
      <th scope="row"><%= index +1%></th>
      <td><%= item.fullUrl %></td>
      <td ><%= item.shortUrl %></td>
      <td ><%= item.click %></td>
      <td><button id="shortURL" class="btn btn-primary" value="<%= item.shortUrl %> ">Copy</button></td>
    </tr>
    <% }) %>
  </tbody>
</table>

<script>
    const short = document.querySelectorAll('#shortURL');
    short.forEach((item) => {
      item.addEventListener('click', () => {
        const baseUrl = 'http://localhost:5000/' + item.value;
        navigator.clipboard.writeText(baseUrl);
        alert('successfully copy link');
      });
    });
</script>
